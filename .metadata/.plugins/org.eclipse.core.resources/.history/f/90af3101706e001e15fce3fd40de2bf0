<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myWeb.www.repository.BoardDAO">
	<insert id="register" parameterType="com.myWeb.www.domain.boardVO">
		insert into board (title,writer,content)
		values (#{title},#{writer},#{content})
	</insert>
	<select id="getList" resultType="com.myWeb.www.domain.boardVO">
		select * from board order by bno desc
	</select>
	<select id="getPageList" parameterType="com.myWeb.www.domain.pagingVO" resultType="com.myWeb.www.domain.boardVO">
		select * from board order by bno desc limit #{pageStart},#{qty}
	</select>
	<select id="getDetail" resultType="com.myWeb.www.domain.boardVO">
		select * from board where bno=#{bno}
	</select>
	<update id="postModify" parameterType="com.myWeb.www.domain.boardVO">
		update board set title=#{title},content=#{content},mod_at=now() where bno=#{bno}
	</update>
	<delete id="getRemove">
		delete from board where bno=#{bno}
	</delete>
	<update id="readCountUp">
		update board set  read_count= read_count+1 where bno=#{bno}
	</update>
	<select id="getTotalCount" resultType="int">
		select count(bno) from board;
	</select>
	
	<sql id="search"></sql>
</mapper>